<input type='text' id='search_term' placeholder='s e a r c h &middot; t i t l e' />
<script type='text/javascript'>
  $(function() {
    $( '#search_term' ).autocomplete({
      source: '<%= search_documents_path %>',
      minLength: 2,
      select: function(event, ui) {
        window.location = '/documents/' + ui.item.id;
      }
    });
  });
</script>
